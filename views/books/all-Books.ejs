<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <%- include('../partials/navbar') %>

      <% const bookGenres = ["drama", "comedy", "action", "horror", "sci-fi", "western", "romance", "thriller"," fantasy", "apocalypse", "martial arts", "sports"]%>
        <ul>
            <%bookGenres.forEach((genre) => {%>
            <li><a href="books/genre/<%= genre %>"><%= genre %></a></li>
            <%})%>
            </ul>

    <h1>All Books</h1>

    <a href="/books/new">Add a book Recomindation</a>


    <% allBooks.forEach((book)=> {%>
     <h2><%= book.title%></h2>
     <p>Author: <%= book.author%></p>
     <p>Rating: <%= book.rating%>/5</p>
     <p>Genre: <%= book.genre%></p>
     <a href="/books/<%= book._id%>">View Details</a>
     <hr>

    <%})%>
    
</body>
</html>