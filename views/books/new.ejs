<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Book Recomindation</title>
    <link rel="stylesheet" href="/books-style/new.css" />
  </head>
  <body>
    <header>
      <div class="navbar"><%- include('../partials/navbar') %></div>
      <h1>Add a book Recomindation</h1>
      <a href="/books" class="allbooks-page-link">All books</a>
    </header>
    <div class="container">
      <form action="/books/new" method="post">
        <label for="title">Title:</label>
        <input type="text" name="title" id="title" />
        <br />
        <br />
        <label for="author">Author:</label>
        <input type="text" name="author" id="author" />
        <br />
        <br />
        <label for="rating">Rating:</label>
        <input type="number" name="rating" id="rating" step="0.1" />
        <br />
        <br />
        <label for="price">Price:</label>
        <input type="number" name="price" id="price" step="0.1" />
        <br />
        <br />
        <label for="year">Published Year:</label>
        <input type="number" name="year" id="year" />
        <br />
        <br />

        <label for="genre">Genre:</label>
        <br />
        <% const bookGenres = ["Drama", "Comedy", "Action", "Horror", "Sci-fi",  "Western", "Romance", "Thriller"," Fantasy", "Apocalypse", "Martial arts", "Sports"]%>
       
        <select name="genre" id="genre">
          <%bookGenres.forEach((genre) => {%>
          <option value="<%= genre%>"><%= genre%></option>
          <%}); %>
        </select>

        <br />
        <br />
        <label for="reason">Reason for Recomindation:</label>
        <br />
        <br />
        <textarea name="reason" id="reason"></textarea>
        <br />
        <button class="add-btn" type="submit">Add</button>
      </form>
    </div>
  </body>
</html>
